<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FS_ValidacionRespuestaCliente</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    TEXT(FS_AprobacionSolucion__c) == &quot;Si&quot;,  
    FS_RespuestaCliente__c == null,
     FS_NombreTipoRegistro__c == &apos;Consulta&apos;
)</errorConditionFormula>
    <errorDisplayField>FS_RespuestaCliente__c</errorDisplayField>
    <errorMessage>Debe llenar la respuesta que se enviara al cliente</errorMessage>
</ValidationRule>
